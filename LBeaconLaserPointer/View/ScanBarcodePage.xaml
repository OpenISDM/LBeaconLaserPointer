<Page Width="800" Height="480"
    x:Class="LBeaconLaserPointer.xaml.ScanBarcodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LBeaconLaserPointer.xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >

    <Grid Background="Gray">
        <Image x:Name="imageSource" Source="ms-appx:///View/image/testImgae.jpg" HorizontalAlignment="Center" Margin="0,40,0,40" VerticalAlignment="Top"/>
        <TextBlock Foreground="White" Text="請掃描QRcode"  FontSize="32" HorizontalAlignment="Left" />
        <TextBlock Foreground="White" x:Name="TextDescription" Text=""  FontSize="32" HorizontalAlignment="Left" Margin="0,40,0,0" />
        <Button  x:Name="BtnGoBack" HorizontalAlignment="Right" VerticalAlignment="Top" Width="110" Height="110" Margin="0,30,30,0" Click="BtnGoBack_Click">
            <Image Source="ms-appx:///View/image/Back.png" />
        </Button>
    </Grid>
</Page>
